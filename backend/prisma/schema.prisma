generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  email     String?  @unique
  createdAt DateTime @default(now())
  bookings  Booking[]
}

model Booking {
  id           String   @id @default(uuid())
  userId       String
  brand        String
  model        String
  invoiceNo    String?
  preferredAt  DateTime?
  status       String   @default("pending")
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

