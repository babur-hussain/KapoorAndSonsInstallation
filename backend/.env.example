MONGO_URI=mongodb://localhost:27017/kapoorsons
PORT=4000

# JWT Authentication
# Generate a strong secret key for production
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Email Configuration (Gmail SMTP)
# For Gmail:
#   1. Enable 2-Factor Authentication
#   2. Generate App Password: https://myaccount.google.com/apppasswords
#   3. Use the 16-character app password below
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Kapoor & Sons

# Twilio WhatsApp Configuration
# Get credentials from: https://www.twilio.com/console
# For testing, use Twilio Sandbox: https://www.twilio.com/console/sms/whatsapp/sandbox
# Sandbox number: whatsapp:+14155238886 (default)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# n8n Webhook Configuration
# URL for n8n webhook to send booking emails
# Default: http://localhost:5678/webhook/send-booking-email
N8N_WEBHOOK_URL=http://localhost:5678/webhook/send-booking-email
